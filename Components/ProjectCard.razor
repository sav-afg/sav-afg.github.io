@using Portfolio.Models

<div class="card h-100 shadow-sm">
    @if (!string.IsNullOrEmpty(Project.ImagePath1) || !string.IsNullOrEmpty(Project.ImagePath2))
    {
        <div id="carousel-@Project.Id" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @if (!string.IsNullOrEmpty(Project.ImagePath1))
                {
                    <div class="carousel-item active">
                        <img src="@Project.ImagePath1" class="d-block w-100" alt="@Project.Title - Screenshot 1" style="height: 250px; object-fit: contain; background-color: #f8f9fa;">
                    </div>
                }
                @if (!string.IsNullOrEmpty(Project.ImagePath2))
                {
                    <div class="carousel-item @(string.IsNullOrEmpty(Project.ImagePath1) ? "active" : "")">
                        <img src="@Project.ImagePath2" class="d-block w-100" alt="@Project.Title - Screenshot 2" style="height: 250px; object-fit: contain; background-color: #f8f9fa;">
                    </div>
                }
            </div>
            @if (!string.IsNullOrEmpty(Project.ImagePath1) && !string.IsNullOrEmpty(Project.ImagePath2))
            {
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@Project.Id" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel-@Project.Id" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            }
        </div>
    }
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Project.Title</h5>
        <p class="card-text">@Project.Description</p>
        <p class="text-muted small"><strong>Tech:</strong> @Project.Technologies</p>
        <div class="mt-auto">
            <div class="d-flex gap-2 flex-wrap">
                <a href="@($"/projects/{Project.Id}")" class="btn btn-primary btn-sm">View Details</a>
                @if (!string.IsNullOrEmpty(Project.GitHubUrl))
                {
                    <a href="@Project.GitHubUrl" target="_blank" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-github"></i> GitHub
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Project Project { get; set; } = null!;
}
