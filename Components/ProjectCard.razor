@using Portfolio.Models

<article class="project-card">
    @if (!string.IsNullOrEmpty(Project.ImagePath1) || !string.IsNullOrEmpty(Project.ImagePath2))
    {
        <div class="project-card-images">
            @if (!string.IsNullOrEmpty(Project.ImagePath2))
            {
                <img src="@Project.ImagePath2" alt="@Project.Title - Image 2" class="project-image" />
            }
        </div>
    }
    <div class="project-card-content">
        <h3>@Project.Title</h3>
        <p class="project-description">@Project.Description</p>
        <p class="project-technologies">@Project.Technologies</p>
        <div class="project-links">
            <a href="@($"/projects/{Project.Id}")" class="btn btn-primary">View Details</a>
            @if (!string.IsNullOrEmpty(Project.GitHubUrl))
            {
                <a href="@Project.GitHubUrl" target="_blank" class="btn btn-secondary">GitHub</a>
            }
        </div>
    </div>
</article>

@code {
    [Parameter]
    public Project Project { get; set; } = null!;
}
