@page "/projects/{id:int}"
@using Portfolio.Data

<PageTitle>@projectTitle - Portfolio</PageTitle>

@if (project == null)
{
    <div class="container my-5">
        <div class="alert alert-warning text-center" role="alert">
            <h4 class="alert-heading">Project not found</h4>
            <p class="mb-3">The project you're looking for doesn't exist.</p>
            <a href="/projects" class="btn btn-primary">Back to Projects</a>
        </div>
    </div>
}
else
{
    <div class="container my-5">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/projects">Projects</a></li>
                <li class="breadcrumb-item active" aria-current="page">@project.Title</li>
            </ol>
        </nav>

        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold">@project.Title</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <span class="badge bg-primary-subtle text-primary-emphasis fs-6 px-3 py-2">@project.Technologies</span>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h2 class="h4 mb-3">About This Project</h2>
                        <p class="text-muted mb-0">@project.Description</p>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h2 class="h4 mb-3">Key Features</h2>
                        <ul class="list-unstyled">
                            @if (!string.IsNullOrEmpty(project.Feature1))
                            {
                                <li class="mb-2">@project.Feature1</li>
                            }
                            @if (!string.IsNullOrEmpty(project.Feature2))
                            {
                                <li class="mb-2">@project.Feature2</li>
                            }
                            @if (!string.IsNullOrEmpty(project.Feature3))
                            {
                                <li class="mb-2">@project.Feature3</li>
                            }
                            @if (!string.IsNullOrEmpty(project.Feature4))
                            {
                                <li class="mb-2">@project.Feature4</li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="d-flex gap-3 flex-wrap justify-content-center">
                    @if (!string.IsNullOrEmpty(project.GitHubUrl))
                    {
                        <a href="@project.GitHubUrl" target="_blank" class="btn btn-primary btn-lg px-4">View on GitHub</a>
                    }
                    @if (!string.IsNullOrEmpty(project.LiveUrl))
                    {
                        <a href="@project.LiveUrl" target="_blank" class="btn btn-success btn-lg px-4">View Live Demo</a>
                    }
                    <a href="/projects" class="btn btn-outline-secondary btn-lg px-4">Back to Projects</a>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Project? project;
    private string projectTitle = "Project";

    protected override void OnInitialized()
    {
        project = ProjectData.GetProjectById(Id);
        if (project != null)
        {
            projectTitle = project.Title;
        }
    }
}
