@page "/projects"
@using Portfolio.Data

<PageTitle>Projects - Portfolio</PageTitle>

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">My Projects</h1>
        <p class="lead text-muted">
            Selected projects demonstrating backend-focused .NET development,
            system design, and real-world problem solving.
        </p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var project in projects)
        {
            <div class="col">
                <ProjectCard Project="@project" />
            </div>
        }
    </div>
</div>

@code {
    private List<Project> projects = new();

    protected override void OnInitialized()
    {
        projects = ProjectData.GetProjects();
    }
}
